                echo -e "${YELLOW}æç¤º: Docker Desktop é€šå¸¸éœ€è¦ 10-30 ç§’æ‰èƒ½å®Œå…¨å•Ÿå‹•${NC}"
            else
                echo -e "${YELLOW}ç„¡æ³•è‡ªå‹•å•Ÿå‹• Docker Desktopï¼Œè«‹æ‰‹å‹•å•Ÿå‹•${NC}"
            fi
