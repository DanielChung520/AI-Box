    "routing_policies": {
      "default_strategy": "smart_selection",
      "strategies": {
        "smart_selection": {
          "description": "智能選擇 - 根據性能、成本、可用性綜合評分",
          "algorithm": "weighted_scoring",
          "fallback_on_error": true,
          "retry_count": 3
        },
        "performance_first": {
          "description": "性能優先 - 優先使用最快的模型",
          "algorithm": "latency_based",
          "fallback_on_error": true,
          "retry_count": 2
        },
        "cost_optimized": {
          "description": "成本優化 - 優先使用最便宜的模型",
          "algorithm": "cost_based",
          "fallback_on_error": true,
          "retry_count": 3
        }
      }
    },
    
    "metadata": {
